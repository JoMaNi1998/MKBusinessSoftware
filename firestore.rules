rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Development-Regeln: Erlaubt alle Lese-/Schreibzugriffe
    // ⚠️ WICHTIG: Für Production müssen sichere Regeln implementiert werden!
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
